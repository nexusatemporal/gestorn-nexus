    "multer": "^2.0.2",
    "openai": "^6.16.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdf-parse": "^2.4.5",
    "reflect-metadata": "^0.1.13",
    "rrule": "^2.8.1",
    "rxjs": "^7.8.1",
    "svix": "^1.15.0",
    "zod": "^3.22.4"
